                <!-- //CONTACT -->

                <script>
                    function sendMsg(event) {
                        event.preventDefault()
                        const formData = new FormData(document.querySelector('form'))
                        const formValues = Object.fromEntries(formData.entries());
                        console.log(formValues)

                        $.ajax({
                            url: `/sendMessage`,
                            method: 'POST',
                            data: JSON.stringify(formValues),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.status == "success")
                                    document.querySelector('#displaySuccessAlert').removeAttribute('style')
                                else
                                    document.querySelector('#displayErrorAlert').removeAttribute('style')

                                document.querySelector('#submitForm').reset()  // resets the form
                            },
                            error: function (error) {
                                document.querySelector('#displayErrorAlert').removeAttribute('style')
                                document.querySelector('#submitForm').reset()
                            }
                        })
                    }


                </script>


