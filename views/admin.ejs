                <!-- //HOME -->


                <!-- REQUEST -->
                <section id="Requests" class="py-5 my-5">
                    <div class="container">
                        <div class="row pb-4" data-aos="fade-up">
                            <div class="col-lg-8">
                                <h4 class="text-brand">REQUESTS</h4>
                            </div>
                        </div>

                        <div class="cards m-3 p-3">
                            <ul>
                                <% for (var i = 0; i < requests.length; i++) { %>
                               <li class="p-3 m-3 shadow-effect">
                                    <h4><%= requests[i].username%></h4>
                                    <p><%= requests[i].message%></p>
                               </li>
                               <%}%>
                               <% if (requests.length > 3) { %>
                                <% for (var i = 3; i < requests.length - 3; i++) { %>
                                    <div class="collapse" id="collapseRequests">
                                    <li class="p-3 m-3 shadow-effect">
                                        <h4>Robert</h4>
                                        <p>Hey will you work fot us ?</p>
                                    </li>
                                    </div>
                                <% } %>
                                <a class="btn btn-link" data-toggle="collapse" href="#collapseRequests" role="button" aria-expanded="false" aria-controls="collapseRequests">
                                  Show more
                                </a>
                              <% } %>
                            </ul>
                        </div>
                    </div>
                </section>
                <!-- //REQUEST -->

                <!-- WORK -->
                <section id="work" class="py-5 my-5">
                    <div class="container">
                        <div class="row pb-4" data-aos="fade-up">
                            <div class="col-lg-8">
                                <h4 class="text-brand">WORK</h4>
                            </div>
                        </div>

                        <div class="container table-bordered">
                            <table class="table text-light">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">ProjectImage</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Live link</th>
                                        <th scope="col">Read more</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var count=1 %>
                                        <% works.forEach(work=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= count %>
                                                </th>
                                                <td>
