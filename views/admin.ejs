                                                        </form>
                                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
                <!-- //WORK -->

                <!-- BLOG -->
                <section id="blogs">
                    <div class="container">
                        <div class="row pb-4" data-aos="fade-up">
                            <div class="col-lg-8">
                                <h4 class="text-brand">BLOGS</h4>
                            </div>
                        </div>

                        <div class="container table-bordered">
                            <table class="table text-light">
                                <thead>
                                    <tr>
