<%- include('includes/header')%>
    <link rel="stylesheet" href="/css/admin.css">
    <%- include('includes/modals')%>

        <body data-bs-spy="scroll" data-bs-target=".navbar">

            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
                <div class="container flex-lg-column">
                    <a class="navbar-brand mx-lg-auto mb-lg-4" href="#">
                        <span class="h3 fw-bold d-block d-lg-none">
                            < Anabil />
                        </span>
                        <img src="/images/MY_avatar.jpg" class="d-none d-lg-block rounded-circle" alt="">
                        <label style="display: inline;">
                            <div id="edit-image">
                                <h3 class="d-flex justify-content-end text-success"><i class="fa-solid fa-plus"></i>
                                </h3>
                                <input type="file" style="display: none;">
                            </div>

                    </a>
                    </label>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto flex-lg-column text-lg-center">

                            <li class="nav-item">
                                <a class="nav-link" href="#home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#services">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#work">Work</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#blogs">Blogs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#statistics">Statistics</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- //NAVBAR -->

            <!-- CONTENT WRAPPER -->
            <div id="content-wrapper">
                <!-- HOME -->
                <section id="home" class="full-height px-lg-5">
                    <div class="row pb-4" data-aos="fade-up">
                        <div class="col-lg-8 text-center">
                            <h4 class="text-brand">ANALYTICS</h4>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="container">
                                    <canvas id="piChart"></canvas>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="container">
                                    <h2></h2>
                                    <canvas id="barChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>


                </section>
                <!-- //HOME -->


                <!-- WORK -->
                <section id="work" class="full-height px-lg-5">
                    <div class="container">
                        <div class="row pb-4" data-aos="fade-up">
                            <div class="col-lg-8">
                                <h6 class="text-brand">WORK</h6>
                                <h1>My Recent Projects</h1>
                            </div>
                        </div>

                        <div class="container table-bordered">
                            <table class="table text-light">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">ProjectImage</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Live link</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var count=1 %>
                                        <% works.forEach(work=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= count %>
                                                </th>
                                                <td>
                                                    <%= work.imgURL %>
                                                </td>
                                                <td>
                                                    <%= work.Description %>
                                                </td>
                                                <td>
                                                    <%= work.Heading %>
                                                </td>
                                                <td>@<%= work.LiveDemo %>
                                                </td>
                                                <td><button type="submit" class="btn btn-success p-1">Edit</button></td>
                                            </tr>
                                            <% count++ %>
                                                <% }); %>

                                                    <tr>
                                                        <form>
                                                            <td></td>
                                                            <td><input type="file" class="form-control"></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><button type="submit"
                                                                    class="btn btn-primary p-1">Submit</button></td>
                                                        </form>
                                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
                <!-- //WORK -->

                <!-- BLOG -->
                <section id="blogs">
                    <div class="container">
                        <div class="row pb-4" data-aos="fade-up">
                            <div class="col-lg-8">
                                <h6 class="text-brand">BLOGS</h6>
                                <h1>My Recent Blogs</h1>
                            </div>
                        </div>

                        <div class="container table-bordered">
                            <table class="table text-light">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">ProfileImage</th>
                                        <th scope="col">Blog link</th>
                                        <th scope="col">Blog title</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var count=1 %>
                                        <% blogs.forEach(blog=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= count %>
                                                </th>
                                                <td>
                                                    <%= blog.img %>
                                                </td>
                                                <td>
                                                    <%= blog.linkURL %>
                                                </td>
                                                <td>
                                                    <%= blog.Description %>
                                                </td>
                                                <td><button type="submit" class="btn btn-success p-1">Edit</button></td>
                                            </tr>
                                            <% count++ %>
                                                <% }); %>
                                                    <tr>
                                                        <form>
                                                            <td></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><input type="text" class="form-control"></td>
                                                            <td><button type="submit"
                                                                    class="btn btn-primary p-1">Submit</button></td>
                                                        </form>
                                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
                <!-- //BLOG -->

                <!-- STATISTICS -->
                <section id="statistics" class="full-height px-lg-5">
                    <div class="container">

                        <div class="row justify-content-center text-center">
                            <div class="col-lg-8 pb-4" data-aos="fade-up">
                                <h6 class="text-brand">STASTICS</h6>
                                <h1>Statistics from the last month</h1>
                            </div>
                        </div>


                    </div>
                </section>
                <!-- //CONTACT -->

                <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script>

                <script>
                    // select the canvas element
                    const canvas = document.getElementById('piChart');

                    // create a new chart instance
                    const chart = new Chart(canvas, {
                        type: 'pie',
                        data: {
                            labels: ['Red', 'Blue', 'Yellow'],
                            datasets: [{
                                data: [30, 20, 30],
                                backgroundColor: ['red', 'blue', 'yellow']
                            }]
                        }
                    });


                    // select the canvas element
                    const barcanvas = document.getElementById('barChart');

                    // create a new chart instance
                    const barchart = new Chart(barcanvas, {
                        type: 'bar',
                        data: {
                            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                            datasets: [{
                                label: 'Sales',
                                data: [10, 20, 30, 15, 25, 35, 20],
                                backgroundColor: ['red', 'blue', 'yellow', 'green', 'orange', 'purple', 'teal']
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });

                </script>

                <%- include('includes/footer')%>