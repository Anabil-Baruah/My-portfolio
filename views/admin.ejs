                <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script>
                <script>

                    const addWork = document.querySelector('#addWork')

                    addWork.addEventListener('submit', async (event) => {
                        event.preventDefault();

                        const formData = new FormData(addWork);

                        const fileInput = document.querySelector('#file-input1')
                        const file = fileInput.files[0];
                        var base64String
                        if (file !== undefined) {

                            const reader = new FileReader();
                            reader.readAsBinaryString(file);
                            base64String = await new Promise((resolve) => {
                                reader.addEventListener('load', () => {
                                    resolve(btoa(reader.result));
                                });
                            });
                            formData.append('fileType', file.type)
                            formData.append('base64String', base64String)
                            formData.append('fileType', file.type)
                        }
                        const formValues = Object.fromEntries(formData.entries());
                        $.ajax({
                            url: `${baseURL}/admin/addWork`,
                            method: 'POST',
                            data: JSON.stringify(formValues),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.status === "error")
                                    alert(response.message)
                                else if (response.status === "success") {
                                    alert(response.message)
                                }
                                else
                                    alert(response.message)
                            },
                            error: function (response) {
                                alert(response.message)
                            }
                        })
                    });


                    const addBlog = document.querySelector('#addBlog')

                    addBlog.addEventListener('submit', async (event) => {
                        event.preventDefault();

                        const formData = new FormData(addBlog);

                        const formValues = Object.fromEntries(formData.entries());
                        console.log(formValues)
                        $.ajax({
                            url: `${baseURL}/admin/addBlog`,
                            method: 'POST',
                            data: JSON.stringify(formValues),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.status === "error")
                                    alert(response.message)
                                else if (response.status === "success") {
                                    alert(response.message)
                                    location.reload()
                                }
                                else
                                    alert(response.message)
                            },
                            error: function (response) {
                                alert(response.message)
                            }
                        })
                    });


                    // select the canvas element
                    const canvas = document.getElementById('piChart');

                    // create a new chart instance
                    const chart = new Chart(canvas, {
                        type: 'pie',
                        data: {
                            labels: ['Visitors', 'Requests', 'Redirections'],
                            datasets: [{
                                data: [30, 20, 30],
                                backgroundColor: ['red', 'blue', 'yellow']
                            }]
                        },
                        options: {
                            plugins: {
                                legend: {
                                    labels: {
                                        color: 'white',
                                        font: {
                                            size: 16
                                        }
                                    }
                                }
                            }
                        }
                    });


                    // select the canvas element
                    const barcanvas = document.getElementById('barChart');

                    // create a new chart instance
                    const barchart = new Chart(barcanvas, {
                        type: 'bar',
                        data: {
                            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                            datasets: [{
                                label: 'Profile Visitors',
                                data: [10, 20, 30, 15, 25, 35, 20],
                                backgroundColor: 'green'
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        font: {
                                            size: 16
                                        },
                                        color: 'white'
                                    }
                                },
                                x: {
                                    ticks: {
                                        font: {
                                            size: 16
                                        },
                                        color: 'white'
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    labels: {
                                        color: 'white',
                                        font: {
                                            size: 16
                                        }
                                    }
                                }
                            },
                            responsive: true,
                            height: 400 // set the height here
                        }
                    });

                </script>

