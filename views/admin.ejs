            <!-- CONTENT WRAPPER -->
            <div id="content-wrapper">
                <!-- HOME -->
                <section id="home" class="full-height px-lg-5">
                    <div class="row pb-4" data-aos="fade-up">
                        <div class="col-lg-8 ">
                            <h4 class="text-brand">ANALYTICS</h4>
